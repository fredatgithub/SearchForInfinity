<Window x:Class="SearchForInfinity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchForInfinity"
        mc:Ignorable="d"
        Title="Search for PostgreSQL Infinity Values" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
  <Grid Margin="10">
    <TabControl>
      <TabItem Header="Database Connection">
        <Grid Margin="10">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <Label Grid.Row="0" Grid.Column="0" Content="Server:" Margin="5"/>
          <TextBox x:Name="txtServer" Grid.Row="0" Grid.Column="1" Margin="5" Text="localhost"/>

          <Label Grid.Row="1" Grid.Column="0" Content="Port:" Margin="5"/>
          <TextBox x:Name="txtPort" Grid.Row="1" Grid.Column="1" Margin="5" Text="5432"/>

          <Label Grid.Row="2" Grid.Column="0" Content="Database:" Margin="5"/>
          <TextBox x:Name="txtDatabase" Grid.Row="2" Grid.Column="1" Margin="5"/>

          <Label Grid.Row="3" Grid.Column="0" Content="Username:" Margin="5"/>
          <TextBox x:Name="txtUsername" Grid.Row="3" Grid.Column="1" Margin="5"/>

          <Label Grid.Row="4" Grid.Column="0" Content="Password:" Margin="5"/>
          <PasswordBox x:Name="txtPassword" Grid.Row="4" Grid.Column="1" Margin="5"/>

          <Button x:Name="btnTestConnection" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                            Content="Test Connection" Width="150" Height="30" Margin="5" 
                            HorizontalAlignment="Center" Click="BtnTestConnection_Click"/>

          <TextBlock x:Name="lblConnectionStatus" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                               TextWrapping="Wrap" Margin="5"/>

          <Button x:Name="btnConnect" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                            Content="Connect" Width="150" Height="30" Margin="5" 
                            HorizontalAlignment="Center" Click="BtnConnect_Click"/>
        </Grid>
      </TabItem>

      <TabItem x:Name="tabSearch" Header="Search for Infinity" IsEnabled="False">
        <Grid Margin="10">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Schema:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbSchemas" Width="200" Margin="0,0,10,0" 
                                  SelectionChanged="CmbSchemas_SelectionChanged"/>
            <Button x:Name="btnSearch" Content="Search" Width="100" Height="25" 
                                Click="BtnSearch_Click" IsEnabled="False"/>
            <Button x:Name="btnExport" Content="Export to CSV" Width="100" Height="25" 
                                Margin="10,0,0,0" Click="BtnExport_Click" IsEnabled="False"/>
          </StackPanel>

          <TextBlock x:Name="lblStatus" Grid.Row="1" Margin="0,0,0,10" 
                               TextWrapping="Wrap"/>

          <DataGrid x:Name="dgResults" Grid.Row="2" Margin="5" AutoGenerateColumns="False" IsReadOnly="True"
                    CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                    SelectionMode="Single" SelectionUnit="FullRow"
                    MouseDoubleClick="DgResults_MouseDoubleClick"
                    EnableColumnVirtualization="True"
                    EnableRowVirtualization="True"
                    VirtualizingPanel.IsVirtualizing="True"
                    VirtualizingPanel.VirtualizationMode="Recycling"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Resources>
              <Style TargetType="DataGridCell">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Template">
                  <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                      <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                      </Grid>
                    </ControlTemplate>
                  </Setter.Value>
                </Setter>
              </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
              <DataGridTextColumn Header="Schema" Binding="{Binding SchemaName}" Width="*"/>
              <DataGridTextColumn Header="Table" Binding="{Binding TableName}" Width="*"/>
              <DataGridTextColumn Header="Column" Binding="{Binding ColumnName}" Width="*"/>
              <DataGridTextColumn Header="Type" Binding="{Binding DataType}" Width="*"/>
              <DataGridTextColumn Header="Count" Binding="{Binding RowCount}" Width="*"/>
            </DataGrid.Columns>
          </DataGrid>

          <StatusBar Grid.Row="3">
            <StatusBarItem>
              <TextBlock x:Name="lblStatusBar" Text="Ready"/>
            </StatusBarItem>
          </StatusBar>
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
